%section#main-body
  .container
    .row
      / Container for main page display content
      .col-xs-12.main-content
        .header-lined
          %div.expenses_listing_header
            %h3
              Expenses List

              = link_to 'Add New Expense', new_expense_path, class: 'link'
        .row
          .form-group.col-sm-12
            %table.table
              %thead
                %tr
                  %th Date
                  %th Expense Type
                  %th Payment Mode
                  %th Bank Name
                  %th Amount
                  %th Description

              %tbody
                - @expenses.each do |expense|
                  %tr
                    %td= expense[:date]
                    %td= expense[:expense_type]
                    %td= expense[:payment_mode]
                    %td= expense[:bank_name]
                    %td= expense[:amount]
                    %td= expense[:description]
                    %td
                      %div.edit-btn
                        = link_to 'Edit', edit_expense_path(expense)

%br
