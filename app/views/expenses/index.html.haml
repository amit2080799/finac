%div.card.expenses_card
  %div.wrapper_header
    %div
    %div.expenses_listing_header.expenses_listing_header_text
      Expenses List
    %div.expenses_listing_header
      = link_to 'Add New Expense', new_expense_path, class: 'link'
  %div.card-body.expenses_card_body
    %table.table
      %thead
        %tr
          %th Date
          %th Expense Type
          %th Payment Mode
          %th Bank Name
          %th Amount
          %th Description

      %tbody
        - @expenses.each do |expense|
          %tr
            %td= expense[:date]
            %td= expense[:expense_type]
            %td= expense[:payment_mode]
            %td= expense[:bank_name]
            %td= expense[:amount]
            %td= expense[:description]
            %td
              %div.edit-btn
                = link_to 'Edit', edit_expense_path(expense)

%br
